@model MagicVilla_Web.Models.VM.VillaNumberDeleteVM

<form asp-action="DeleteVillaNumber">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Delete Villa Number</h1>
        <hr />
        <input asp-for="VillaNumber.VillaNo" hidden class="form-control" />
        <div class="row">
            <br />
            <div class="col-2">
                <label asp-for="VillaNumber.VillaNo" class="control-lable pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pt-3">
                <input asp-for="VillaNumber.VillaNo" disabled  class="form-control" />
            </div>
            <br />
            <div class="col-2">
                <label asp-for="VillaNumber.VillaID" class="control-lable pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pt-3">
                <Select asp-for="VillaNumber.VillaID" disabled class="form-control" asp-items="@Model.VillaList">
                    <option  selected> -- Select Villa -- </option>
                </Select>
            </div>
            <br />
            <div class="col-2">
                <label asp-for="VillaNumber.SpecialDetails" class="control-lable pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pt-3">
                <input asp-for="VillaNumber.SpecialDetails" disabled class="form-control" />
            </div>
            <br />
            <div class="col-5 offset-2">
                <br />
                <a asp-action="IndexVillaNumber"  asp-controller="VillaNumber" class="btn-primary btn form-control">Back To List</a>
            </div>
            <div class="col-5">
                <br />
                <input type="submit" value="Delete" class=" btn btn-success  form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}